<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_trail_assistant_main" tools:context=".TrailAssistantMain">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Predefined Route"
        android:id="@+id/button_predefined_route"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:onClick="onPredefinedRouteChosen" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Free Trail"
        android:id="@+id/button_free_trail"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/button_predefined_route"
        android:layout_alignStart="@+id/button_predefined_route"
        android:layout_alignRight="@+id/button_predefined_route"
        android:layout_alignEnd="@+id/button_predefined_route"
        android:onClick="onFreeTrailChosen" />
</RelativeLayout>
