<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_start_screen" tools:context=".StartScreenActivity"
    android:id="@+id/ack"
    android:background="#a9a9ad">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Predefined Route"
        android:id="@+id/predefined_route"
        android:layout_alignParentTop="true"
        android:layout_marginTop="88dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="predefinedRoute"
        android:background="@android:color/holo_blue_light" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Free Trail"
        android:id="@+id/free_trail"
        android:layout_below="@+id/predefined_route"
        android:layout_marginTop="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="freeTrail"
        android:background="@android:color/holo_blue_light" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Define A New Training Program For Shortest Path"
        android:id="@+id/button2"
        android:onClick="newTrainingProgram"
        android:background="@android:color/holo_blue_light"
        android:layout_marginTop="60dp"
        android:layout_below="@+id/free_trail"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
